{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext", // or "commonjs"
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "googlemaps", "faker-js"],
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "googlemaps": ["@types/googlemaps"],
      "faker-js": ["node_modules/faker-js/index"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}